{% extends 'base.html.twig' %}

{% block title %}Gestion des événements - Admin{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .admin-header {
            background: linear-gradient(135deg, var(--primary-red) 0%, #a51c30 100%);
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
        }

        .admin-title {
            font-size: 1.75rem;
            font-weight: 700;
            margin: 0;
        }

        .table-actions {
            display: flex;
            gap: 0.5rem;
        }

        .btn-sm {
            padding: 0.375rem 0.75rem;
            font-size: 0.875rem;
        }

        .event-status {
            display: inline-block;
            padding: 0.25rem 0.75rem;
            border-radius: 1rem;
            font-size: 0.813rem;
            font-weight: 600;
        }

        .status-upcoming { background-color: #d1fae5; color: #065f46; }
        .status-full { background-color: #fed7aa; color: #92400e; }
        .status-ongoing { background-color: #dbeafe; color: #1e40af; }
        .status-past { background-color: #e5e7eb; color: #374151; }
    </style>
{% endblock %}

{% block body %}
    <div class="admin-header">
        <div class="container">
            <h1 class="admin-title">Gestion des événements</h1>
        </div>
    </div>

    <div class="container">
        {# Messages flash #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Liste des événements ({{ events|length }})</h2>
            <a href="{{ path('admin_event_new') }}" class="btn btn-primary">
                Créer un événement
            </a>
        </div>

        {% if events|length > 0 %}
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Titre</th>
                            <th>Date</th>
                            <th>Lieu</th>
                            <th>Participants</th>
                            <th>Statut</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for event in events %}
                            <tr>
                                <td>
                                    <strong>{{ event.title }}</strong><br>
                                    <small class="text-muted">
                                        {% if event.category %}
                                            {{ event.category.name }}
                                        {% else %}
                                            <em>Sans catégorie</em>
                                        {% endif %}
                                    </small>
                                </td>
                                <td>
                                    {{ event.dateStart|date('d/m/Y') }}<br>
                                    <small class="text-muted">{{ event.dateStart|date('H:i') }}</small>
                                </td>
                                <td>
                                    {{ event.city }}<br>
                                    <small class="text-muted">{{ event.postalCode }}</small>
                                </td>
                                <td>
                                    <strong>{{ event.participantCount }}</strong>
                                    {% if event.maxParticipants %}
                                        / {{ event.maxParticipants }}
                                    {% else %}
                                        <small class="text-muted">(illimité)</small>
                                    {% endif %}
                                </td>
                                <td>
                                    <span class="event-status status-{{ event.status }}">
                                        {{ event.statusLabel }}
                                    </span>
                                </td>
                                <td>
                                    <div class="table-actions justify-content-end">
                                        <a href="{{ path('app_event_show', {id: event.id}) }}"
                                           class="btn btn-sm btn-info"
                                           title="Voir">
                                            Voir
                                        </a>
                                        <a href="{{ path('admin_event_participants', {id: event.id}) }}"
                                           class="btn btn-sm btn-secondary"
                                           title="Participants">
                                            Participants ({{ event.participantCount }})
                                        </a>
                                        <a href="{{ path('admin_event_edit', {id: event.id}) }}"
                                           class="btn btn-sm btn-warning"
                                           title="Modifier">
                                            Modifier
                                        </a>
                                        <form method="post"
                                              action="{{ path('admin_event_delete', {id: event.id}) }}"
                                              style="display: inline;"
                                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet événement ?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
                                            <button type="submit" class="btn btn-sm btn-danger" title="Supprimer">
                                                Supprimer
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="alert alert-info">
                <p class="mb-0">Aucun événement pour le moment.</p>
            </div>
        {% endif %}

        <div class="mt-4">
            <a href="{{ path('admin_dashboard') }}" class="btn btn-outline-secondary">
                ← Retour au dashboard
            </a>
        </div>
    </div>
{% endblock %}
