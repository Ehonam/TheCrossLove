{% extends 'base.html.twig' %}

{% block title %}Inscription - EventHub{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .auth-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: calc(100vh - 300px);
            padding: 2rem 0;
        }

        .auth-card {
            background-color: var(--white);
            border-radius: 1rem;
            box-shadow: var(--shadow-lg);
            padding: 3rem;
            width: 100%;
            max-width: 450px;
        }

        .auth-icon {
            width: 64px;
            height: 64px;
            margin: 0 auto 1.5rem;
            background-color: #FEE2E2;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .auth-icon svg {
            width: 32px;
            height: 32px;
            fill: var(--primary-red);
        }

        .auth-title {
            text-align: center;
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--text-dark);
            margin-bottom: 0.5rem;
        }

        .auth-subtitle {
            text-align: center;
            color: var(--text-gray);
            font-size: 0.875rem;
            margin-bottom: 2rem;
        }

        .auth-form {
            display: flex;
            flex-direction: column;
            gap: 1.25rem;
        }

        .form-group {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .form-label {
            font-weight: 600;
            font-size: 0.875rem;
            color: var(--text-dark);
        }

        .form-control {
            padding: 0.75rem;
            border: 1px solid var(--border-gray);
            border-radius: 0.5rem;
            font-size: 0.875rem;
            transition: all 0.2s;
        }

        .form-control:focus {
            outline: none;
            border-color: var(--primary-red);
            box-shadow: 0 0 0 3px rgba(220, 38, 38, 0.1);
        }

        .checkbox-group {
            display: flex;
            align-items: start;
            gap: 0.5rem;
        }

        .checkbox-group input[type="checkbox"] {
            margin-top: 0.25rem;
        }

        .checkbox-label {
            font-size: 0.813rem;
            color: var(--text-gray);
        }

        .checkbox-label a {
            color: var(--primary-red);
            text-decoration: none;
        }

        .checkbox-label a:hover {
            text-decoration: underline;
        }

        .auth-footer {
            text-align: center;
            margin-top: 1.5rem;
            font-size: 0.875rem;
            color: var(--text-gray);
        }

        .auth-footer a {
            color: var(--primary-red);
            text-decoration: none;
            font-weight: 600;
        }

        .auth-footer a:hover {
            text-decoration: underline;
        }

        .form-error {
            color: var(--primary-red);
            font-size: 0.813rem;
            margin-top: 0.25rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="auth-container">
            <div class="auth-card">
                <div class="auth-icon">
                    <svg viewBox="0 0 24 24" fill="currentColor">
                        <path d="M15 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm-9-2V7H4v3H1v2h3v3h2v-3h3v-2H6zm9 4c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                    </svg>
                </div>

                <h1 class="auth-title">Inscription</h1>
                <p class="auth-subtitle">Créez votre compte EventHub pour commencer</p>

                {# Afficher les messages flash #}
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    {% endfor %}
                {% endfor %}
                {{ form_start(registrationForm, {'attr': {'class': 'auth-form'}}) }}

                <div class="form-group">
                    {{ form_label(registrationForm.firstName, 'Prénom', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(registrationForm.firstName, {'attr': {'class': 'form-control', 'placeholder': 'Votre prénom'}}) }}
                    {{ form_errors(registrationForm.firstName) }}
                </div>

                <div class="form-group">
                    {{ form_label(registrationForm.lastName, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(registrationForm.lastName, {'attr': {'class': 'form-control', 'placeholder': 'Votre nom'}}) }}
                    {{ form_errors(registrationForm.lastName) }}
                </div>

                <div class="form-group">
                    {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'votre@email.com', 'type': 'email'}}) }}
                    {{ form_errors(registrationForm.email) }}
                </div>

                <div class="form-group">
                    {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': '••••••••', 'id': 'password_input'}}) }}
                    {{ form_errors(registrationForm.plainPassword) }}
                    <small class="text-muted">Minimum 6 caractères</small>
                </div>

                <div class="form-group">
                    <label for="password_confirm" class="form-label">Confirmation de mot de passe</label>
                    <input
                        type="password"
                        id="password_confirm"
                        class="form-control"
                        placeholder="••••••••"
                        required
                    >
                </div>

                <div class="checkbox-group">
                    {{ form_widget(registrationForm.agreeTerms, {'attr': {'id': 'agree_terms'}, 'label': false}) }}
                    <label for="agree_terms" class="checkbox-label">
                        J'accepte les <a href="#" onclick="return false;">conditions d'utilisation</a> et la <a href="#" onclick="return false;">politique de confidentialité</a>
                    </label>
                    {{ form_errors(registrationForm.agreeTerms) }}
                </div>

                <button type="submit" class="btn btn-primary" style="width: 100%; padding: 0.875rem; font-size: 1rem;">
                    Créer un compte
                </button>

                {{ form_end(registrationForm) }}

                <div class="auth-footer">
                    Déjà inscrit ? <a href="{{ path('default_login') }}">Se connecter</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Validation de confirmation de mot de passe
        const form = document.querySelector('.auth-form');
        const passwordInput = document.getElementById('password_input');
        const confirmInput = document.getElementById('password_confirm');

        form.addEventListener('submit', function(e) {
            if (passwordInput.value !== confirmInput.value) {
                e.preventDefault();
                alert('Les mots de passe ne correspondent pas');
                confirmInput.focus();
            }
        });

        // Validation en temps réel
        confirmInput.addEventListener('input', function() {
            if (this.value && passwordInput.value !== this.value) {
                this.style.borderColor = 'var(--primary-red)';
            } else {
                this.style.borderColor = 'var(--border-gray)';
            }
        });
    </script>
{% endblock %}
