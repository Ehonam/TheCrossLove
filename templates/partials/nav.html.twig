{# Navigation principale moderne #}
<nav class="navbar navbar-expand-lg navbar-light sticky-top">
    <div class="container">
        <a class="navbar-brand" href="{{ path('default_home') }}">
            <img src="{{ asset('images/logo.png') }}" alt="Logo" style="height: 75px;">
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto align-items-lg-center">
                <li class="nav-item">
                    <a class="nav-link {{ app.request.get('_route') starts with 'default_event' ? 'active' : '' }}"
                       href="{{ path('default_event_index') }}">
                        <i class="bi bi-calendar3"></i> Événements
                    </a>
                </li>

                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link {{ app.request.get('_route') == 'default_event_new' ? 'active' : '' }}"
                           href="{{ path('default_event_new') }}">
                            <i class="bi bi-plus-circle"></i> Créer un événement
                        </a>
                    </li>
                {% endif %}

                {% if app.user %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle user-badge" href="#" id="userDropdown" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle"></i> {{ app.user.firstname }} {{ app.user.lastname }}
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li>
                                <a class="dropdown-item" href="#">
                                    <i class="bi bi-person"></i> Mon profil
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="{{ path('default_my_registrations') }}">
                                    <i class="bi bi-calendar-check"></i> Mes inscriptions
                                </a>
                            </li>
                            {% if is_granted('ROLE_ADMIN') %}
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" href="{{ path('default_admin_dashboard') }}">
                                        <i class="bi bi-speedometer2"></i> Dashboard Admin
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="{{ path('default_admin_events') }}">
                                        <i class="bi bi-calendar3-event"></i> Gestion événements
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="{{ path('default_admin_categories') }}">
                                        <i class="bi bi-tags"></i> Gestion catégories
                                    </a>
                                </li>
                            {% endif %}
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item text-danger" href="{{ path('default_logout') }}">
                                    <i class="bi bi-box-arrow-right"></i> Déconnexion
                                </a>
                            </li>
                        </ul>
                    </li>
                {% else %}
                    <li class="nav-item me-2">
                        <a class="btn btn-outline-primary btn-sm" href="{{ path('default_login') }}">
                            <i class="bi bi-box-arrow-in-right"></i> Connexion
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-primary btn-sm" href="{{ path('default_register') }}">
                            <i class="bi bi-person-plus"></i> Inscription
                        </a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>

<style>
    .user-badge {
        background-color: var(--light-bg);
        padding: 0.5rem 1rem !important;
        border-radius: 2rem;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .user-badge:hover {
        background-color: rgba(102, 126, 234, 0.15) !important;
        color: var(--primary-color) !important;
    }

    .navbar-nav .btn {
        padding: 0.5rem 1rem;
        font-size: 0.875rem;
    }

    @media (max-width: 991.98px) {
        .nav-item {
            margin-bottom: 0.5rem;
        }

        .navbar-nav .btn {
            width: 100%;
            margin-bottom: 0.5rem;
        }

        .user-badge {
            border-radius: 0.5rem;
            width: 100%;
            text-align: left;
        }
    }
</style>
