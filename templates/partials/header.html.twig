{# Meta tags et liens CSS #}
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta name="description" content="{% block meta_description %}EventHub - Plateforme de gestion d'événements. Découvrez, créez et participez aux meilleurs événements.{% endblock %}">
<meta name="author" content="EventHub">
<meta name="keywords" content="{% block meta_keywords %}événements, strasbourg, grand est, concerts, conférences, sport{% endblock %}">

<title>{% block title %}EventHub{% endblock %}</title>

<!-- Bootstrap 5 -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<!-- Custom Styles -->
<style>
    :root {
        --primary-color: #667eea;
        --primary-dark: #5568d3;
        --secondary-color: #764ba2;
        --success-color: #198754;
        --danger-color: #dc3545;
        --warning-color: #ffc107;
        --info-color: #0dcaf0;
        --light-bg: #f8f9fa;
        --dark-text: #212529;
    }

    body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        background-color: var(--light-bg);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    /* Navbar moderne */
    .navbar {
        background-color: #ffffff;
        box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,0.075);
        padding: 1rem 0;
    }

    .navbar-brand {
        font-weight: 700;
        font-size: 1.5rem;
        color: var(--primary-color) !important;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s ease;
    }

    .navbar-brand:hover {
        color: var(--primary-dark) !important;
        transform: translateY(-2px);
    }

    .navbar-brand i {
        font-size: 1.75rem;
    }

    .nav-link {
        font-weight: 500;
        color: var(--dark-text) !important;
        padding: 0.5rem 1rem !important;
        transition: all 0.3s ease;
        border-radius: 0.5rem;
    }

    .nav-link:hover {
        color: var(--primary-color) !important;
        background-color: rgba(102, 126, 234, 0.1);
    }

    .nav-link.active {
        color: var(--primary-color) !important;
        background-color: rgba(102, 126, 234, 0.15);
    }

    /* Dropdown menu */
    .dropdown-menu {
        border: none;
        box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15);
        border-radius: 0.75rem;
        padding: 0.5rem;
    }

    .dropdown-item {
        border-radius: 0.5rem;
        padding: 0.5rem 1rem;
        transition: all 0.3s ease;
    }

    .dropdown-item:hover {
        background-color: rgba(102, 126, 234, 0.1);
        color: var(--primary-color);
    }

    .dropdown-item i {
        width: 20px;
    }

    /* Boutons modernes */
    .btn {
        padding: 0.625rem 1.25rem;
        font-weight: 500;
        border-radius: 0.5rem;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
        border: none;
    }

    .btn-primary:hover {
        background: linear-gradient(135deg, var(--primary-dark) 0%, #63408a 100%);
        transform: translateY(-2px);
        box-shadow: 0 0.5rem 1rem rgba(102, 126, 234, 0.25);
    }

    .btn-outline-primary {
        color: var(--primary-color);
        border-color: var(--primary-color);
    }

    .btn-outline-primary:hover {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
        border-color: var(--primary-color);
        color: white;
        transform: translateY(-2px);
    }

    /* Cards modernes */
    .card {
        border: none;
        border-radius: 1rem;
        box-shadow: 0 0.125rem 0.5rem rgba(0,0,0,0.075);
        transition: all 0.3s ease;
        overflow: hidden;
    }

    .card:hover {
        box-shadow: 0 0.5rem 1.5rem rgba(0,0,0,0.15);
        transform: translateY(-5px);
    }

    .card-header {
        background-color: #ffffff;
        border-bottom: 1px solid rgba(0,0,0,0.075);
        padding: 1.5rem;
        font-weight: 600;
    }

    .card-body {
        padding: 1.5rem;
    }

    .card-footer {
        background-color: #ffffff;
        border-top: 1px solid rgba(0,0,0,0.075);
        padding: 1rem 1.5rem;
    }

    /* Badges modernes */
    .badge {
        padding: 0.5rem 0.75rem;
        font-weight: 500;
        border-radius: 0.5rem;
    }

    .bg-primary-subtle {
        background-color: rgba(102, 126, 234, 0.15) !important;
    }

    .text-primary {
        color: var(--primary-color) !important;
    }

    /* Alerts modernes */
    .alert {
        border: none;
        border-radius: 0.75rem;
        padding: 1rem 1.5rem;
    }

    /* Forms modernes */
    .form-control, .form-select {
        border-radius: 0.5rem;
        border: 1px solid #dee2e6;
        padding: 0.75rem 1rem;
        transition: all 0.3s ease;
    }

    .form-control:focus, .form-select:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 0.25rem rgba(102, 126, 234, 0.25);
    }

    .form-label {
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: var(--dark-text);
    }

    /* Content wrapper */
    .content-wrapper {
        flex: 1;
        padding: 3rem 0;
    }

    /* User badge */
    .user-badge {
        background-color: var(--light-bg);
        padding: 0.5rem 1rem !important;
        border-radius: 2rem;
        font-weight: 500;
    }

    .user-badge:hover {
        background-color: rgba(102, 126, 234, 0.15) !important;
    }

    /* Icon styling */
    .bi {
        vertical-align: -0.125em;
    }

    /* Hero Section */
    .hero-section {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
        color: white;
        border-radius: 1rem;
        margin-bottom: 3rem;
    }

    .hero-section h1 {
        color: white;
    }

    .hero-section .lead {
        color: rgba(255,255,255,0.9);
    }

    /* Footer */
    footer {
        background-color: #ffffff;
        border-top: 1px solid rgba(0,0,0,0.075);
        padding: 3rem 0 1rem;
        margin-top: auto;
    }

    footer h5 {
        font-weight: 700;
        margin-bottom: 1.5rem;
    }

    footer ul {
        list-style: none;
        padding: 0;
    }

    footer ul li {
        margin-bottom: 0.75rem;
    }

    footer a {
        color: var(--dark-text);
        text-decoration: none;
        transition: color 0.3s ease;
    }

    footer a:hover {
        color: var(--primary-color);
    }

    .social-icons a {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: var(--light-bg);
        color: var(--dark-text);
        margin-right: 0.5rem;
        transition: all 0.3s ease;
    }

    .social-icons a:hover {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
        color: white;
        transform: translateY(-3px);
    }

    /* Responsive adjustments */
    @media (max-width: 991.98px) {
        .nav-item {
            margin-bottom: 0.5rem;
        }

        .navbar-nav .btn {
            width: 100%;
            margin-bottom: 0.5rem;
        }
    }

    {% block custom_styles %}{% endblock %}
</style>

{% block extra_styles %}{% endblock %}
