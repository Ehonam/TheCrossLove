{# Footer moderne EventHub #}
<footer>
    <div class="container">
        <div class="row mb-4">
            <div class="col-lg-4 mb-4 mb-lg-0">
                <h5 class="mb-3">
                    EventHub
                </h5>
                <p class="text-muted">
                    La plateforme de référence pour découvrir, créer et participer aux meilleurs événements.
                </p>
                <div class="social-icons mt-3">
                    <a href="#" aria-label="Facebook" title="Facebook">
                        <i class="bi bi-facebook"></i>
                    </a>
                    <a href="#" aria-label="Twitter" title="Twitter">
                        <i class="bi bi-twitter"></i>
                    </a>
                    <a href="#" aria-label="Instagram" title="Instagram">
                        <i class="bi bi-instagram"></i>
                    </a>
                    <a href="#" aria-label="LinkedIn" title="LinkedIn">
                        <i class="bi bi-linkedin"></i>
                    </a>
                </div>
            </div>

            <div class="col-lg-2 col-md-4 mb-4 mb-lg-0">
                <h5>Navigation</h5>
                <ul>
                    <li>
                        <a href="{{ path('default_home') }}">
                            <i class="bi bi-house-door"></i> Accueil
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('default_event_index') }}">
                            <i class="bi bi-calendar3"></i> Événements
                        </a>
                    </li>
                    {% if is_granted('ROLE_ADMIN') %}
                        <li>
                            <a href="{{ path('default_admin_dashboard') }}">
                                <i class="bi bi-speedometer2"></i> Dashboard
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </div>

            <div class="col-lg-2 col-md-4 mb-4 mb-lg-0">
                <h5>Mon compte</h5>
                <ul>
                    {% if app.user %}
                        <li>
                            <a href="#">
                                <i class="bi bi-person"></i> Mon profil
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('default_my_registrations') }}">
                                <i class="bi bi-calendar-check"></i> Mes inscriptions
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('security_deconnexion') }}">
                                <i class="bi bi-box-arrow-right"></i> Déconnexion
                            </a>
                        </li>
                    {% else %}
                        <li>
                            <a href="{{ path('security_connexion') }}">
                                <i class="bi bi-box-arrow-in-right"></i> Connexion
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('security_inscription') }}">
                                <i class="bi bi-person-plus"></i> Inscription
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </div>

            <div class="col-lg-4 col-md-4">
                <h5>Contact</h5>
                <ul>
                    <li>
                        <i class="bi bi-envelope"></i>
                        <a href="mailto:contact@eventhub.com">contact@eventhub.com</a>
                    </li>
                    <li>
                        <i class="bi bi-telephone"></i>
                        <a href="tel:+33323456789">+33 3 23 45 67 89</a>
                    </li>
                    <li>
                        <i class="bi bi-geo-alt"></i>
                        <span class="text-muted">Strasbourg, France</span>
                    </li>
                </ul>
            </div>
        </div>

        <hr class="my-4">

        <div class="row">
            <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                <p class="text-muted mb-0">
                    &copy; {{ "now"|date("Y") }} EventHub. Tous droits réservés.
                </p>
            </div>
            <div class="col-md-6 text-center text-md-end">
                <a href="#" class="text-muted me-3">Conditions d'utilisation</a>
                <a href="#" class="text-muted me-3">Politique de confidentialité</a>
                <a href="#" class="text-muted">Mentions légales</a>
            </div>
        </div>
    </div>
</footer>

<!-- Scripts Bootstrap -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

{% block extra_scripts %}{% endblock %}
