{% extends 'base.html.twig' %}

{% block title %}Calendrier - EventHub{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .calendar-container {
            display: grid;
            grid-template-columns: 500px 1fr;
            gap: 2rem;
            margin-bottom: 2rem;
        }

        .calendar-widget {
            background-color: var(--white);
            border-radius: 0.75rem;
            padding: 1.5rem;
            box-shadow: var(--shadow-sm);
        }

        .calendar-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
        }

        .calendar-title {
            font-size: 1.125rem;
            font-weight: 600;
            color: var(--text-dark);
        }

        .calendar-nav {
            display: flex;
            gap: 0.5rem;
        }

        .calendar-nav-btn {
            width: 32px;
            height: 32px;
            border: 1px solid var(--border-gray);
            background-color: var(--white);
            border-radius: 0.375rem;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.2s;
        }

        .calendar-nav-btn:hover {
            background-color: var(--bg-light);
            border-color: var(--primary-red);
        }

        .calendar-grid {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            gap: 0.5rem;
        }

        .calendar-weekday {
            text-align: center;
            font-size: 0.75rem;
            font-weight: 600;
            color: var(--text-gray);
            padding: 0.5rem 0;
        }

        .calendar-day {
            aspect-ratio: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 0.375rem;
            font-size: 0.875rem;
            cursor: pointer;
            transition: all 0.2s;
        }

        .calendar-day:hover {
            background-color: var(--bg-light);
        }

        .calendar-day.other-month {
            color: var(--text-gray);
            opacity: 0.4;
        }

        .calendar-day.today {
            background-color: var(--primary-red);
            color: var(--white);
            font-weight: 600;
        }

        .calendar-day.has-events {
            position: relative;
        }

        .calendar-day.has-events::after {
            content: '';
            position: absolute;
            bottom: 4px;
            width: 4px;
            height: 4px;
            border-radius: 50%;
            background-color: var(--primary-red);
        }

        .calendar-day.today.has-events::after {
            background-color: var(--white);
        }

        .calendar-summary {
            margin-top: 1.5rem;
            padding: 1rem;
            background-color: var(--bg-light);
            border-radius: 0.5rem;
            text-align: center;
            color: var(--text-gray);
            font-size: 0.875rem;
        }

        .events-list-section {
            background-color: var(--white);
            border-radius: 0.75rem;
            padding: 1.5rem;
            box-shadow: var(--shadow-sm);
        }

        .events-list-header {
            margin-bottom: 1.5rem;
        }

        .events-list-title {
            font-size: 1.125rem;
            font-weight: 600;
            color: var(--text-dark);
            margin-bottom: 0.5rem;
        }

        .selected-date {
            font-size: 0.875rem;
            color: var(--text-gray);
        }

        .events-list {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .event-item {
            padding: 1rem;
            border: 1px solid var(--border-gray);
            border-radius: 0.5rem;
            transition: all 0.2s;
            cursor: pointer;
        }

        .event-item:hover {
            border-color: var(--primary-red);
            box-shadow: 0 2px 8px rgba(220, 38, 38, 0.1);
        }

        .event-item-header {
            display: flex;
            justify-content: space-between;
            align-items: start;
            margin-bottom: 0.5rem;
        }

        .event-item-title {
            font-weight: 600;
            color: var(--text-dark);
            margin-bottom: 0.25rem;
        }

        .event-item-time {
            font-size: 0.813rem;
            color: var(--text-gray);
        }

        .event-item-category {
            padding: 0.25rem 0.5rem;
            background-color: var(--primary-red);
            color: var(--white);
            border-radius: 0.25rem;
            font-size: 0.7rem;
            font-weight: 600;
            text-transform: uppercase;
        }

        .event-item-location {
            font-size: 0.813rem;
            color: var(--text-gray);
            display: flex;
            align-items: center;
            gap: 0.375rem;
        }

        .event-item-location svg {
            width: 14px;
            height: 14px;
            fill: var(--text-gray);
        }

        .no-events {
            text-align: center;
            padding: 3rem 1rem;
            color: var(--text-gray);
        }

        .no-events svg {
            width: 48px;
            height: 48px;
            margin: 0 auto 1rem;
            opacity: 0.4;
        }

        /* Responsive */
        @media (max-width: 1024px) {
            .calendar-container {
                grid-template-columns: 1fr;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="calendar-container">
            <div class="calendar-widget">
                <div class="calendar-header">
                    <h2 class="calendar-title" id="calendar-title">Octobre 2025</h2>
                    <div class="calendar-nav">
                        <button class="calendar-nav-btn" id="prev-month">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                            </svg>
                        </button>
                        <button class="calendar-nav-btn" id="next-month">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                            </svg>
                        </button>
                    </div>
                </div>

                <div class="calendar-grid">
                    <div class="calendar-weekday">Dim</div>
                    <div class="calendar-weekday">Lun</div>
                    <div class="calendar-weekday">Mar</div>
                    <div class="calendar-weekday">Mer</div>
                    <div class="calendar-weekday">Jeu</div>
                    <div class="calendar-weekday">Ven</div>
                    <div class="calendar-weekday">Sam</div>

                    <div id="calendar-days"></div>
                </div>

                <div class="calendar-summary" id="calendar-summary">
                    0 événements ce mois
                </div>
            </div>

            <div class="events-list-section">
                <div class="events-list-header">
                    <h2 class="events-list-title">Liste événements de la date sélectionnée</h2>
                    <div class="selected-date" id="selected-date">Vendredi, 3 Octobre 2025</div>
                </div>

                <div class="events-list" id="events-list">
                    {% if events is defined and events|length > 0 %}
                        {% for event in events %}
                            <a href="{{ path('event_show', {'id': event.id}) }}" style="text-decoration: none; color: inherit;">
                                <div class="event-item" data-date="{{ event.startDate|date('Y-m-d') }}">
                                    <div class="event-item-header">
                                        <div>
                                            <div class="event-item-title">{{ event.title }}</div>
                                            <div class="event-item-time">{{ event.startDate|date('H:i') }}</div>
                                        </div>
                                        <span class="event-item-category">{{ event.category }}</span>
                                    </div>
                                    <div class="event-item-location">
                                        <svg viewBox="0 0 24 24" fill="currentColor">
                                            <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
                                        </svg>
                                        {{ event.city }}, {{ event.country }}
                                    </div>
                                </div>
                            </a>
                        {% endfor %}
                    {% else %}
                        <div class="no-events">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                            </svg>
                            <p>Aucun événement pour cette date</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}


  {% block javascripts %}
      {{ parent() }}
      <script>

        // Calendar functionality
        let currentDate = new Date();
        const today = new Date();

        function renderCalendar() {
            const year = currentDate.getFullYear();
            const month = currentDate.getMonth();

            // Update title
            const monthNames = ['Janvier', 'Février', 'Mars', 'Avril', 'Mai', 'Juin',
                'Juillet', 'Août', 'Septembre', 'Octobre', 'Novembre', 'Décembre'];
            document.getElementById('calendar-title').textContent = `${monthNames[month]} ${year}`;

            // Get first day of month and number of days
            const firstDay = new Date(year, month, 1).getDay();
            const daysInMonth = new Date(year, month + 1, 0).getDate();
            const daysInPrevMonth = new Date(year, month, 0).getDate();

            // Clear calendar
            const calendarDays = document.getElementById('calendar-days');
            calendarDays.innerHTML = '';

            // Add previous month days
            for (let i = firstDay - 1; i >= 0; i--) {
                const day = document.createElement('div');
                day.className = 'calendar-day other-month';
                day.textContent = daysInPrevMonth - i;
                calendarDays.appendChild(day);
            }

            // Add current month days
            for (let i = 1; i <= daysInMonth; i++) {
                const day = document.createElement('div');
                day.className = 'calendar-day';
                day.textContent = i;

                // Check if today
                if (i === today.getDate() && month === today.getMonth() && year === today.getFullYear()) {
                    day.classList.add('today');
                }

                // Add click event
                day.addEventListener('click', function() {
                    document.querySelectorAll('.calendar-day').forEach(d => d.style.outline = 'none');
                    this.style.outline = '2px solid var(--primary-red)';

                    const selectedDate = new Date(year, month, i);
                    const dateStr = selectedDate.toLocaleDateString('fr-FR', {
                        weekday: 'long',
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                    });
                    document.getElementById('selected-date').textContent = dateStr.charAt(0).toUpperCase() + dateStr.slice(1);

                    // Filter events (in real app, this would be an AJAX call)
                    filterEventsByDate(selectedDate);
                });

                calendarDays.appendChild(day);
            }

            // Add next month days
            const totalCells = calendarDays.children.length;
            const remainingCells = 42 - totalCells;
            for (let i = 1; i <= remainingCells; i++) {
                const day = document.createElement('div');
                day.className = 'calendar-day other-month';
                day.textContent = i;
                calendarDays.appendChild(day);
            }
        }

        function filterEventsByDate(date) {
            const dateStr = date.toISOString().split('T')[0];
            const events = document.querySelectorAll('.event-item');
            let visibleCount = 0;

            events.forEach(event => {
                const eventDate = event.dataset.date;
                if (eventDate === dateStr) {
                    event.parentElement.style.display = 'block';
                    visibleCount++;
                } else {
                    event.parentElement.style.display = 'none';
                }
            });

            // Show/hide no events message
            const noEventsDiv = document.querySelector('.no-events');
            if (visibleCount === 0 && !noEventsDiv) {
                document.getElementById('events-list').innerHTML = `
                <div class="no-events">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                    <p>Aucun événement pour cette date</p>
                </div>
            `;
            }
        }

        document.getElementById('prev-month').addEventListener('click', function() {
            currentDate.setMonth(currentDate.getMonth() - 1);
            renderCalendar();
        });

        document.getElementById('next-month').addEventListener('click', function() {
            currentDate.setMonth(currentDate.getMonth() + 1);
            renderCalendar();
        });

        // Initial render
        renderCalendar();
    </script>
{% endblock %}
