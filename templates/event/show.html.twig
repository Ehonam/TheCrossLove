{% extends 'base.html.twig' %}

{% block title %}{{ event.name }}{% endblock %}

{% block body %}
    <div class="event-detail-page">
        <!-- Event Header -->
        <section class="event-detail-header">
            <div class="container">
                <div class="breadcrumb animate-fade-in">
                    <a href="{{ path('app_home') }}">
                        <i class="fas fa-home"></i> Accueil
                    </a>
                    <span class="separator">/</span>
                    <a href="{{ path('app_event_index') }}">Événements</a>
                    <span class="separator">/</span>
                    <span>{{ event.name }}</span>
                </div>
            </div>
        </section>

        <!-- Event Content -->
        <section class="event-detail-content">
            <div class="container">
                <div class="event-detail-layout">
                    <!-- Main Content -->
                    <div class="event-detail-main">
                        <!-- Event Image -->
                        {% if event.image %}
                            <div class="event-detail-image animate-fade-in">
                                <img src="{{ asset('uploads/events/' ~ event.image) }}" alt="{{ event.name }}">
                                {% if event.featured %}
                                    <div class="event-badge-large">À la une</div>
                                {% endif %}
                            </div>
                        {% else %}
                            <div class="event-detail-image-default animate-fade-in">
                                <i class="fas fa-calendar-alt"></i>
                            </div>
                        {% endif %}

                        <!-- Event Info -->
                        <div class="event-detail-info animate-slide-up">
                            <div class="event-category-badge">{{ event.category }}</div>
                            <h1 class="event-detail-title">{{ event.name }}</h1>

                            <!-- Event Meta -->
                            <div class="event-detail-meta">
                                <div class="meta-item">
                                    <i class="fas fa-calendar-alt"></i>
                                    <div>
                                        <strong>Date</strong>
                                        <span>{{ event.startDate|date('d/m/Y') }}</span>
                                    </div>
                                </div>
                                <div class="meta-item">
                                    <i class="fas fa-clock"></i>
                                    <div>
                                        <strong>Horaire</strong>
                                        <span>{{ event.startDate|date('H:i') }}{% if event.endDate %} - {{ event.endDate|date('H:i') }}{% endif %}</span>
                                    </div>
                                </div>
                                <div class="meta-item">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <div>
                                        <strong>Lieu</strong>
                                        <span>{{ event.location }}</span>
                                    </div>
                                </div>
                                <div class="meta-item">
                                    <i class="fas fa-users"></i>
                                    <div>
                                        <strong>Places disponibles</strong>
                                        <span>{{ event.availableSeats }} / {{ event.capacity }}</span>
                                    </div>
                                </div>
                            </div>

                            <!-- Event Description -->
                            <div class="event-detail-description">
                                <h2><i class="fas fa-info-circle"></i> Description</h2>
                                <p>{{ event.description }}</p>
                            </div>

                            <!-- Event Details -->
                            {% if event.additionalInfo %}
                                <div class="event-detail-additional">
                                    <h2><i class="fas fa-list"></i> Informations complémentaires</h2>
                                    <div class="additional-info">
                                        {{ event.additionalInfo|raw }}
                                    </div>
                                </div>
                            {% endif %}

                            <!-- Event Organizer -->
                            <div class="event-organizer">
                                <h3><i class="fas fa-user-tie"></i> Organisateur</h3>
                                <div class="organizer-info">
                                    <div class="organizer-avatar">
                                        <i class="fas fa-user-circle"></i>
                                    </div>
                                    <div>
                                        <strong>{{ event.organizer ?? 'EventManager' }}</strong>
                                        <span>Organisateur vérifié</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Sidebar -->
                    <aside class="event-detail-sidebar">
                        <!-- Registration Card -->
                        <div class="registration-card sticky-card animate-slide-left">
                            <div class="registration-price">
                                {% if event.price > 0 %}
                                    <span class="price-amount">{{ event.price }}€</span>
                                    <span class="price-label">par personne</span>
                                {% else %}
                                    <span class="price-amount text-success">Gratuit</span>
                                    <span class="price-label">Inscription libre</span>
                                {% endif %}
                            </div>

                            {% if event.availableSeats > 0 %}
                                <!-- Registration Form -->
                                {% if app.user %}
                                    {{ form_start(registration_form, {'attr': {'class': 'registration-form'}}) }}
                                    <div class="form-group">
                                        {{ form_row(registration_form.numberOfSeats, {
                                            'label': 'Nombre de places',
                                            'attr': {'class': 'form-control', 'max': event.availableSeats}
                                        }) }}
                                    </div>

                                    {% if event.price > 0 %}
                                        <div class="total-price">
                                            <span>Total:</span>
                                            <strong id="totalPrice">{{ event.price }}€</strong>
                                        </div>
                                    {% endif %}

                                    <button type="submit" class="btn btn-primary btn-block btn-lg">
                                        <i class="fas fa-ticket-alt"></i> S'inscrire maintenant
                                    </button>

                                    <div class="registration-info">
                                        <i class="fas fa-check-circle"></i>
                                        Confirmation immédiate par email
                                    </div>
                                    {{ form_end(registration_form) }}
                                {% else %}
                                    <a href="{{ path('app_login') }}" class="btn btn-primary btn-block btn-lg">
                                        <i class="fas fa-sign-in-alt"></i> Connexion pour s'inscrire
                                    </a>
                                    <p class="text-center mt-3">
                                        Pas encore de compte ?
                                        <a href="{{ path('app_register') }}">Créer un compte</a>
                                    </p>
                                {% endif %}
                            {% else %}
                                <div class="event-full">
                                    <i class="fas fa-exclamation-circle"></i>
                                    <strong>Événement complet</strong>
                                    <p>Toutes les places ont été réservées</p>
                                </div>
                            {% endif %}

                            <!-- Availability Bar -->
                            <div class="availability-bar">
                                {% set percentage = (event.registrations|length / event.capacity * 100) %}
                                <div class="availability-progress">
                                    <div class="progress-fill" style="width: {{ percentage }}%"></div>
                                </div>
                                <div class="availability-text">
                                    {{ event.registrations|length }} inscrit(s) / {{ event.capacity }} places
                                </div>
                            </div>

                            <!-- Share Buttons -->
                            <div class="share-section">
                                <p class="share-label">Partager cet événement</p>
                                <div class="share-buttons">
                                    <a href="#" class="share-btn facebook" onclick="shareOnFacebook(); return false;">
                                        <i class="fab fa-facebook-f"></i>
                                    </a>
                                    <a href="#" class="share-btn twitter" onclick="shareOnTwitter(); return false;">
                                        <i class="fab fa-twitter"></i>
                                    </a>
                                    <a href="#" class="share-btn linkedin" onclick="shareOnLinkedIn(); return false;">
                                        <i class="fab fa-linkedin-in"></i>
                                    </a>
                                    <a href="#" class="share-btn email" onclick="shareByEmail(); return false;">
                                        <i class="fas fa-envelope"></i>
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- Quick Info Card -->
                        <div class="quick-info-card">
                            <h3><i class="fas fa-info-circle"></i> Informations pratiques</h3>
                            <ul class="quick-info-list">
                                <li>
                                    <i class="fas fa-check"></i>
                                    Confirmation immédiate
                                </li>
                                <li>
                                    <i class="fas fa-ticket-alt"></i>
                                    Billet électronique
                                </li>
                                <li>
                                    <i class="fas fa-undo"></i>
                                    Annulation jusqu'à 24h avant
                                </li>
                                <li>
                                    <i class="fas fa-shield-alt"></i>
                                    Paiement sécurisé
                                </li>
                            </ul>
                        </div>
                    </aside>
                </div>
            </div>
        </section>

        <!-- Related Events -->
        {% if related_events|length > 0 %}
            <section class="related-events">
                <div class="container">
                    <h2 class="section-title animate-on-scroll">
                        <i class="fas fa-calendar-week"></i> Événements similaires
                    </h2>
                    <div class="events-grid">
                        {% for relatedEvent in related_events %}
                            <div class="event-card animate-on-scroll" style="animation-delay: {{ loop.index * 0.1 }}s">
                                {% if relatedEvent.image %}
                                    <div class="event-image" style="background-image: url('{{ asset('uploads/events/' ~ relatedEvent.image) }}')"></div>
                                {% else %}
                                    <div class="event-image event-image-default">
                                        <i class="fas fa-calendar-alt"></i>
                                    </div>
                                {% endif %}
                                <div class="event-content">
                                    <div class="event-category">{{ relatedEvent.category }}</div>
                                    <h3 class="event-title">
                                        <a href="{{ path('app_event_show', {id: relatedEvent.id}) }}">
                                            {{ relatedEvent.name }}
                                        </a>
                                    </h3>
                                    <div class="event-meta">
                                        <div class="event-meta-item">
                                            <i class="fas fa-calendar"></i>
                                            {{ relatedEvent.startDate|date('d/m/Y') }}
                                        </div>
                                        <div class="event-meta-item">
                                            <i class="fas fa-map-marker-alt"></i>
                                            {{ relatedEvent.location }}
                                        </div>
                                    </div>
                                    <div class="event-footer">
                                        <div class="event-price">
                                            {% if relatedEvent.price > 0 %}
                                                {{ relatedEvent.price }}€
                                            {% else %}
                                                Gratuit
                                            {% endif %}
                                        </div>
                                        <a href="{{ path('app_event_show', {id: relatedEvent.id}) }}" class="btn btn-sm btn-primary">
                                            Voir détails
                                        </a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </section>
        {% endif %}
    </div>

    <script>
        // Update total price based on number of seats
        document.addEventListener('DOMContentLoaded', function() {
            const seatsInput = document.querySelector('input[name*="numberOfSeats"]');
            const pricePerSeat = {{ event.price }};
            const totalPriceElement = document.getElementById('totalPrice');

            if (seatsInput && totalPriceElement) {
                seatsInput.addEventListener('input', function() {
                    const seats = parseInt(this.value) || 1;
                    const total = seats * pricePerSeat;
                    totalPriceElement.textContent = total.toFixed(2) + '€';
                });
            }
        });

        // Share functions
        function shareOnFacebook() {
            window.open('https://www.facebook.com/sharer/sharer.php?u=' + encodeURIComponent(window.location.href), 'facebook-share', 'width=580,height=296');
        }

        function shareOnTwitter() {
            window.open('https://twitter.com/intent/tweet?text=' + encodeURIComponent('{{ event.name }}') + '&url=' + encodeURIComponent(window.location.href), 'twitter-share', 'width=550,height=235');
        }

        function shareOnLinkedIn() {
            window.open('https://www.linkedin.com/sharing/share-offsite/?url=' + encodeURIComponent(window.location.href), 'linkedin-share', 'width=490,height=530');
        }

        function shareByEmail() {
            window.location.href = 'mailto:?subject=' + encodeURIComponent('{{ event.name }}') + '&body=' + encodeURIComponent(window.location.href);
        }
    </script>
{% endblock %}
