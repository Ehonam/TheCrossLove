{% extends 'base.html.twig' %}

{% block title %}{{ event.title }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>{{ event.title }}</h1>

        {# Afficher les messages flash #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="row">
            <div class="col-md-8">
                {% if event.image %}
                    <img src="{{ asset('uploads/events/' ~ event.image) }}" alt="{{ event.title }}" class="img-fluid mb-3">
                {% endif %}

                <p>{{ event.description }}</p>

                <h4>Informations pratiques</h4>
                <ul class="list-unstyled">
                    <li><strong> Date de début :</strong> {{ event.dateStart|date('d/m/Y à H:i') }}</li>
                    <li><strong> Date de fin :</strong> {{ event.dateEnd|date('d/m/Y à H:i') }}</li>
                    <li><strong> Lieu :</strong> {{ event.fullAddress }}</li>
                    <li><strong> Organisateur :</strong> {{ event.organizer }}</li>
                    <li><strong> Places disponibles :</strong>
                        {% if event.availableSeats is null %}
                            Illimitées
                        {% else %}
                            {{ event.availableSeats }} / {{ event.maxParticipants }}
                        {% endif %}
                    </li>
                    <li><strong> Statut :</strong>
                        <span class="badge bg-{{ event.status == 'upcoming' ? 'success' : (event.status == 'full' ? 'warning' : 'secondary') }}">
                        {{ event.statusLabel }}
                    </span>
                    </li>
                </ul>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Inscription</h5>

                        {% if app.user %}
                            {% if event.isUserRegistered(app.user) %}
                                <div class="alert alert-info">
                                     Vous êtes déjà inscrit à cet événement
                                </div>
                            {% elseif not event.canRegister %}
                                <div class="alert alert-warning">
                                    {% if event.isFull %}
                                         Événement complet
                                    {% elseif event.isPast %}
                                         Événement terminé
                                    {% else %}
                                         Inscriptions closes
                                    {% endif %}
                                </div>
                            {% else %}
                                {# Utilisateur connecté : afficher le formulaire #}
                                {{ form_start(registration_form) }}
                                <p class="text-muted mb-3">
                                    Vous vous inscrivez en tant que :<br>
                                    <strong>{{ app.user.firstName }} {{ app.user.lastName }}</strong><br>
                                    {{ app.user.email }}
                                </p>
                                <button type="submit" class="btn btn-primary w-100">
                                    S'inscrire à cet événement
                                </button>
                                {{ form_end(registration_form) }}
                            {% endif %}
                        {% else %}
                            {# Utilisateur non connecté : bouton de connexion #}
                            <p class="text-muted">Vous devez être connecté pour vous inscrire.</p>
                            <a href="{{ path('default_login') }}" class="btn btn-primary w-100">
                                Se connecter
                            </a>
                            <a href="{{ path('default_register') }}" class="btn btn-outline-secondary w-100 mt-2">
                                Créer un compte
                            </a>
                        {% endif %}
                    </div>
                </div>

                {% if event.category %}
                    <div class="card mt-3">
                        <div class="card-body">
                            <h6 class="card-title">Catégorie</h6>
                            <span class="badge bg-info">{{ event.category.name }}</span>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>

        {# Événements similaires #}
        {% if related_events|length > 0 %}
            <h3 class="mt-5 mb-4">Événements similaires</h3>
            <div class="row">
                {% for relatedEvent in related_events %}
                    <div class="col-md-4 mb-3">
                        <div class="card h-100">
                            {% if relatedEvent.image %}
                                <img src="{{ asset('uploads/events/' ~ relatedEvent.image) }}" class="card-img-top" alt="{{ relatedEvent.title }}">
                            {% endif %}
                            <div class="card-body">
                                <h5 class="card-title">{{ relatedEvent.title }}</h5>
                                <p class="card-text text-muted small">
                                     {{ relatedEvent.dateStart|date('d/m/Y') }}<br>
                                     {{ relatedEvent.city }}
                                </p>
                                <p class="card-text">{{ relatedEvent.description|slice(0, 100) }}...</p>
                            </div>
                            <div class="card-footer bg-transparent">
                                <a href="{{ path('default_event_show', {'id': relatedEvent.id}) }}" class="btn btn-sm btn-outline-primary w-100">
                                    Voir les détails
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}
