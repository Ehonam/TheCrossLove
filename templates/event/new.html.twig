{% extends 'base.html.twig' %}

{% block title %}
    {% if event.id %}Modifier{% else %}Créer{% endif %} un événement - EventHub
{% endblock %}

{% block body %}
    {# Breadcrumb #}
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('default_home') }}">Accueil</a></li>
            <li class="breadcrumb-item"><a href="{{ path('default_admin_events') }}">Gestion événements</a></li>
            <li class="breadcrumb-item active">
                {% if event.id %}Modifier{% else %}Créer{% endif %} un événement
            </li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <h1 class="h3 fw-bold mb-4">
                        <i class="bi bi-calendar-plus text-primary"></i>
                        {% if event.id %}
                            Modifier l'événement
                        {% else %}
                            Créer un nouvel événement
                        {% endif %}
                    </h1>

                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                    {# Titre #}
                    <div class="mb-3">
                        {{ form_label(form.title, 'Titre de l\'événement', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                        {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Ex: Conférence Tech 2025'}}) }}
                        {{ form_errors(form.title) }}
                    </div>

                    {# Description #}
                    <div class="mb-3">
                        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '5', 'placeholder': 'Décrivez votre événement...'}}) }}
                        {{ form_errors(form.description) }}
                        <small class="text-muted">Décrivez les points clés de votre événement</small>
                    </div>

                    {# Date et heure #}
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.dateStart, 'Date de début', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                            {{ form_widget(form.dateStart, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.dateStart) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.dateEnd, 'Date de fin', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                            {{ form_widget(form.dateEnd, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.dateEnd) }}
                        </div>
                    </div>

                    {# Lieu #}
                    <div class="mb-3">
                        {{ form_label(form.location, 'Nom du lieu', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                        {{ form_widget(form.location, {'attr': {'class': 'form-control', 'placeholder': 'Ex: Centre de conférences de Paris'}}) }}
                        {{ form_errors(form.location) }}
                    </div>

                    {# Adresse #}
                    <div class="row">
                        <div class="col-md-8 mb-3">
                            {{ form_label(form.address, 'Adresse', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                            {{ form_widget(form.address, {'attr': {'class': 'form-control', 'placeholder': '123 rue de la Paix'}}) }}
                            {{ form_errors(form.address) }}
                        </div>
                        <div class="col-md-4 mb-3">
                            {{ form_label(form.postalCode, 'Code postal', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                            {{ form_widget(form.postalCode, {'attr': {'class': 'form-control', 'placeholder': '75001'}}) }}
                            {{ form_errors(form.postalCode) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.city, 'Ville', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                            {{ form_widget(form.city, {'attr': {'class': 'form-control', 'placeholder': 'Paris'}}) }}
                            {{ form_errors(form.city) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.country, 'Pays', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                            {{ form_widget(form.country, {'attr': {'class': 'form-control', 'placeholder': 'France'}}) }}
                            {{ form_errors(form.country) }}
                        </div>
                    </div>

                    {# Catégorie et capacité #}
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.category, 'Catégorie', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                            {{ form_widget(form.category, {'attr': {'class': 'form-select'}}) }}
                            {{ form_errors(form.category) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.maxParticipants, 'Capacité maximale', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                            {{ form_widget(form.maxParticipants, {'attr': {'class': 'form-control', 'placeholder': '100', 'type': 'number', 'min': '1'}}) }}
                            {{ form_errors(form.maxParticipants) }}
                        </div>
                    </div>

                    {# Prix #}
                    <div class="mb-3">
                        {{ form_label(form.price, 'Prix (€)', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                        {{ form_widget(form.price, {'attr': {'class': 'form-control', 'placeholder': '0.00 (gratuit)', 'type': 'number', 'step': '0.01', 'min': '0'}}) }}
                        {{ form_errors(form.price) }}
                        <small class="text-muted">Laissez 0 pour un événement gratuit</small>
                    </div>

                    {# Organisateur #}
                    <div class="mb-3">
                        {{ form_label(form.organizer, 'Organisateur', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                        {{ form_widget(form.organizer, {'attr': {'class': 'form-control', 'placeholder': 'Votre nom ou organisation'}}) }}
                        {{ form_errors(form.organizer) }}
                    </div>

                    {# Image #}
                    <div class="mb-4">
                        {{ form_label(form.imageFile, 'Image de l\'événement', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                        {{ form_widget(form.imageFile, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.imageFile) }}
                        <small class="text-muted">Format recommandé : 1200x600px, JPEG ou PNG, max 2MB</small>

                        {% if event.image %}
                            <div class="mt-3">
                                <img src="{{ asset('uploads/events/' ~ event.image) }}"
                                     alt="Image actuelle"
                                     class="img-thumbnail"
                                     style="max-width: 300px;">
                            </div>
                        {% endif %}
                    </div>

                    {# Boutons d'action #}
                    <div class="d-flex gap-2">
                        <a href="{{ path('default_admin_events') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle"></i> Annuler
                        </a>
                        <button type="submit" class="btn btn-primary flex-grow-1">
                            <i class="bi bi-check-circle"></i>
                            {% if event.id %}
                                Mettre à jour
                            {% else %}
                                Créer l'événement
                            {% endif %}
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block extra_styles %}
    <style>
        .breadcrumb {
            background: transparent;
            padding: 0;
        }

        .breadcrumb-item + .breadcrumb-item::before {
            color: var(--primary-color);
        }

        .breadcrumb-item a {
            color: var(--primary-color);
            text-decoration: none;
        }

        .breadcrumb-item a:hover {
            text-decoration: underline;
        }
    </style>
{% endblock %}
